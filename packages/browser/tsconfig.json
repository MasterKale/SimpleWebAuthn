{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": false,
    "removeComments": true,
    "sourceMap": false,
    "noEmit": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/setupTests.ts",
    "./src/**/__mocks__",
    "./src/**/__jest__"
  ]
}
