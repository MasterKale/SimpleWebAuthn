{
  "name": "simplewebauthn-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "npm run build:types && npm run build:testing && npm run build:browser && npm run build:server",
    "lint": "prettier --write packages/**/src/**/*.ts example/**/*.ts && eslint --fix packages/**/src/**/*.ts example/**/*.ts",
    "docs": "npm run bootstrap && typedoc --tsconfig tsconfigdoc.json",
    "test": "nx run-many --target=test --all",
    "build:types": "nx build @simplewebauthn/typescript-types",
    "build:testing": "nx build @simplewebauthn/testing",
    "build:browser": "nx build @simplewebauthn/browser",
    "build:server": "nx build @simplewebauthn/server",
    "dev:server": "nx test @simplewebauthn/server --watch",
    "dev:browser": "nx test @simplewebauthn/browser --watch"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^27.0.1",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "jest-environment-jsdom": "^27.0.6",
    "lerna": "^3.22.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "ts-jest": "^27.0.5",
    "ts-morph": "^11.0.3",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.15",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.6.3",
    "nx": "14.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
